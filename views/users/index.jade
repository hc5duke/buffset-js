!!! 5
html
  include ../includes/head
  body
    include ../includes/toolbar
    .container#body
      #season-number-outside
        #season-number 2
      #container
        section#users.text
          - each user in users
            - user_id = (user == currentUser) ? 'currentUser' : "user_#{user.id}"
            .user(id = user_id)
              .handle
                a(href = '/users/' + user._id)= user.handle
              - if (user == currentUser)
                .count#edit_currentUser
                  a(href = '#')= helpers.tallyize(user.pushup_set_count)
                .hidden#edit_currentUser_form
                  form.edit_user#edit_user_1(action="/users/#{user._id}", method="post")
                    input#user_pushup_set_count(max="3999", min="0", name="user[pushup_set_count]", size="6", type="number", value="#{user.pushup_set_count}")
                    input#user_submit(name="commit", type="submit", value="save")
                    div
                      input#cancel_edit(type="submit", value="cancel")
              - else
                .count= helpers.tallyize(user.pushup_set_count)

    include ../includes/footer
    script
      var usersHash = {}
